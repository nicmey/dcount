<h3>Dog count</h3>
<div>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3">Classement</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <tr>
          <td> <%= user.username%> </td>
          <td> <%= user.number_walks%> promenades </td>
          <td> <%= user.duration_walks%> minutes  </td>
          <td>
            <%= link_to "", walks_path(:user_id => "#{user.id}"), class: "glyphicon glyphicon-eye-open"  %>        
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if user_signed_in? %>
  <div>
    <%= link_to "Nouvelle promenade", new_walk_path, class: "btn btn-primary"  %>
  </div>
<% end %>