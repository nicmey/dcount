<h3>Promenade de <%= @user_selected.username%></h3>
<div>
  <table class="table">
    <thead>
      <tr>
        <th colspan="2">Promenade</th>
      </tr>
    </thead>
    <tbody>
      <% @walks.order('created_at desc').each do |walk|%>
        <tr>
          <td> Promenade de <%= walk.duration%> minutes</td>
          <td> le <%= walk.created_at.strftime('%d/%m/%y Ã  %H:%M')%> </td>
          <% if @user.id == @user_selected.id%>
          <td>
            <%= link_to "X", walk_path(walk.id), method: :delete, data: {:confirm => 'Voulez-vous vraiment supprimer cette promenade?'}%>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "< Retour", root_path %>
