<!DOCTYPE html>
<html>
  <head>
    <title>Dcount</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if notice %>
  	 <p class="notice"><%= notice %></p>
  	<% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    
    <header class="navbar  navbar-inverse">
        <div class="navbar-class">
          
          <div class="navbar-wagon">
            <!-- Logo -->
            <a href="/" class="navbar-wagon-brand">
              <%= image_tag ("logo.png")%>
            </a>

            <!-- Right Navigation -->
            <div class="navbar-wagon-right">
              <% if user_signed_in?  %>
                Bienvenue <%= @user.username %>! 
                <li><%=link_to "DÃ©connexion", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
              <% else  %>
                <li><%=link_to "Connexion", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
              <% end  %>

            </div>

          </div>
        </div>
      </header>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
